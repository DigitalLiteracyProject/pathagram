<section id="new-session">
  <div class="container">
    <div class="row">

        <h3>New master session</h3>

        <form role="form" method="POST" action="/sessions/new">
          <fieldset>
            <div class="form-group">
              <input class="form-control" placeholder="Session name" type="text" name="name">
            </div>
            <div class="form-group">
              <input class="form-control" placeholder="Description" type="text" name="details">
            </div>
            <div class="form-group">
              <textarea class="form-control" placeholder="Names of files to create, one per line"
                name="filenames"></textarea>
            </div>
            <input class="btn btn-lg btn-success btn-block" type="submit" value="Create Session">
          </fieldset>
        </form>
    </div>
  </div>
</section>
