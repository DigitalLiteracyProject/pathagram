<section id="login">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%- partial('partials/_flash_messages') %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Please sign up</h3>
          </div>
          <div class="panel-body">
            <form role="form" method="POST" action="/signup">
              <fieldset>
                <div class="form-group">
                  <input class="form-control" placeholder="Username" name="username">
                </div>
                <div class="form-group">
                  <input class="form-control" id="password" placeholder="Password" type="password" name="password">
                </div>
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Signup">
              </fieldset>
            </form>
          </div>
          <div class="panel-footer">
            Or <a href="/login">log in</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>